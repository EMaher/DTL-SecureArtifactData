{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "devTestLabName": {
      "type": "string"
    },
    "artifactRepositoryDisplayName": {
      "type": "string",
      "defaultValue": "Team Repository"
    },
    "artifactRepoUri": {
      "type": "string",
      "defaultValue": "https://github.com/RogerBestMsft/DTL-SecureArtifactData.git"
    },
    "artifactRepoBranch": {
      "type": "string",
      "defaultValue": "master"
    },
    "artifactRepoFolder": {
      "type": "string",
      "defaultValue": "Artifacts/"
    },
    "artifactRepoType": {
      "type": "string",
      "allowedValues": [ "VsoGit", "GitHub" ],
      "defaultValue": "GitHub"
    },
    "artifactRepoSecurityToken": {
      "type": "securestring",
      "defaultValue": ""
    }
  },
  "variables": {
    "labVirtualNetworkName": "[concat('Dtl', parameters('devTestLabName'))]",
    "artifactRepositoryName": "[concat('Repo-', uniqueString(subscription().subscriptionId))]"
  },
  "resources": [
    {
      "apiVersion": "2018-10-15-preview",
      "type": "Microsoft.DevTestLab/labs",
      "name": "[parameters('devTestLabName')]",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "apiVersion": "2018-10-15-preview",
          "name": "[variables('labVirtualNetworkName')]",
          "type": "virtualNetworks",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('devTestLabName'))]"
          ]
        },
        {
          "apiVersion": "2018-10-15-preview",
          "name": "[variables('artifactRepositoryName')]",
          "type": "artifactSources",
          "dependsOn": [
            "[resourceId('Microsoft.DevTestLab/labs', parameters('devTestLabName'))]"
          ],
          "properties": {
            "uri": "[parameters('artifactRepoUri')]",
            "folderPath": "[parameters('artifactRepoFolder')]",
            "branchRef": "[parameters('artifactRepoBranch')]",
            "displayName": "[parameters('artifactRepositoryDisplayName')]",
            "sourceType": "[parameters('artifactRepoType')]",
            "status": "Enabled"
          }
        }
      ]
    }
  ],
  "outputs": {
    "labId": {
      "type": "string",
      "value": "[resourceId('Microsoft.DevTestLab/labs', parameters('devTestLabName'))]"
    }
  }
}